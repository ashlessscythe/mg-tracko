generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(cuid())
  name            String
  email           String          @unique
  password        String
  role            Role
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  mustGoRequests  MustGoRequest[] @relation("CreatedBy")
  requestLogs     RequestLog[]    @relation("PerformedBy")
}

model MustGoRequest {
  id              String        @id @default(cuid())
  shipmentNumber  String
  plant           String?
  partDetails     PartDetail[]  // New relation for part numbers with quantities
  trailerNumber   String?       // Added trailer number
  palletCount     Int
  status          RequestStatus @default(PENDING)
  routeInfo       String?
  additionalNotes String?
  notes           String[]      @default([])
  createdBy       String        
  creator         User          @relation("CreatedBy", fields: [createdBy], references: [id])
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  logs            RequestLog[]  @relation("RequestLogs")
  deleted         Boolean       @default(false)
  deletedAt       DateTime?

  @@index([createdBy])
}

// New model to store part numbers with quantities
model PartDetail {
  id              String        @id @default(cuid())
  partNumber      String
  quantity        Int
  requestId       String
  request         MustGoRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)

  @@index([requestId])
}

model RequestLog {
  id              String        @id @default(cuid())
  mustGoRequestId String
  mustGoRequest   MustGoRequest @relation("RequestLogs", fields: [mustGoRequestId], references: [id])
  action          String        
  performedBy     String
  performer       User          @relation("PerformedBy", fields: [performedBy], references: [id])
  timestamp       DateTime      @default(now())

  @@index([mustGoRequestId])
  @@index([performedBy])
}

enum Role {
  ADMIN
  CUSTOMER_SERVICE
  WAREHOUSE
  REPORT_RUNNER
  PENDING
}

enum RequestStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}
